.main .post {
    width: 220rpx;
    height: 220rpx;
    position: fixed;
    right: 2rpx;
    bottom: 2px;
    z-index: 1000;
}

.main .list {
    padding-top: 20rpx;
}

.main .list .item {
    padding: 10rpx;
    margin: 0rpx;
    position: relative;
}

.main .list .item .item-ask {
    padding: 10rpx 20rpx;
    font-size: 32rpx;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
    background-color: rgba(255, 255, 255, 0.8);
    line-height: 2;
}

.main .list .item .item-ask .ask {
    margin-left: 15rpx;
    font-size: 35rpx;
}

.main .list .item .item-ask .icon {
    width: 29rpx;
    height: 29rpx;
}

.main .list .item .item-answer {
    padding: 10rpx 20rpx;
    font-size: 32rpx;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
    background-color: rgba(255, 255, 255, 0.8);
    line-height: 2;
}

.main .list .item .item-answer .answer {
    margin-left: 15rpx;
    font-size: 35rpx;
}

.main .list .item .item-answer .icon {
    width: 29rpx;
    height: 29rpx;
}

.main .list .item .menu {
    right: 10rpx;
    bottom: 10rpx;
    position: absolute;
}

.main .list .item .menu .menu-item {
    float: left;
    color: #8a8a8a;
    margin: 10rpx;
}

.main .list .item .menu .menu-item image {
    width: 26rpx;
    height: 26rpx;
}

.main .list .item .menu .menu-item text {
    margin-left: 10rpx;
}

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 36rpx;
}

.modal-title {
    padding-top: 50rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding: 50rpx 32rpx;
}

.modal-input {
    display: flex;
    background: #fff;
    border: 2rpx solid #ddd;
    border-radius: 4rpx;
    font-size: 28rpx;
}